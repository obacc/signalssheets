# Environment Variables Template for Trinity Replicator
# Copy this file to .env.yaml and fill in the actual values
# DO NOT commit .env.yaml to the repository!

# Cloudflare API Token (with KV write permissions)
CLOUDFLARE_API_TOKEN: "your_cloudflare_api_token_here"

# Cloudflare KV Namespace ID
# Get this by running: wrangler kv:namespace create "SIGNALS_KV"
CLOUDFLARE_KV_NAMESPACE_ID: "your_kv_namespace_id_here"

# GitHub Personal Access Token (with repo write permissions)
GITHUB_TOKEN: "your_github_pat_here"
